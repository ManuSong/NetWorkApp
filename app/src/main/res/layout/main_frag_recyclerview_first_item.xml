<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="150dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/main_review_recyclerview_bg1"
    xmlns:app="http://schemas.android.com/apk/res-auto">





            <TextView
                android:id="@+id/recycle_res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오랑오랑 - 용산/숙대"
                android:textColor="@color/black"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="18dp"/>

            <TextView
                android:id="@+id/recycle_kindof_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디저트"
                app:layout_constraintStart_toStartOf="@+id/recycle_res_name"
                app:layout_constraintTop_toBottomOf="@+id/recycle_res_name"
                android:textSize="10dp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/spoqahansansneo_regular"/>

            <TextView
                android:id="@+id/main_recycle_notice_text"
                android:layout_width="179dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/recycle_kindof_menu"
                app:layout_constraintStart_toStartOf="@+id/recycle_res_name"
                android:text="해방촌 꼭대기에 있어 한번 방문하기도 쉽지않은 오랑오랑, 카페 내부계단도 어마어마 해서어마퉃ㅍ"
                android:textSize="15dp"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_marginTop="6dp"/>


            <ImageView
                android:id="@+id/main_recycle_chacter"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@+id/main_recycle_notice_text"
                app:layout_constraintStart_toStartOf="@id/recycle_res_name"
                android:src="@drawable/login_move_img"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginTop="4dp"/>


            <TextView
                android:id="@+id/main_recycle_chacter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="류정하"
                android:textSize="10dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/main_recycle_chacter"
                app:layout_constraintTop_toTopOf="@+id/main_recycle_chacter"
                app:layout_constraintBottom_toBottomOf="@id/main_recycle_chacter"
                android:layout_marginLeft="5dp"/>


            <ImageView
                android:id="@+id/res_imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/login_move_img"
                android:scaleType="fitXY"
                android:background="@drawable/main_screen_img_bg"
                android:layout_marginRight="15dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>